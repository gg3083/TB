                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/webapp</directory>
                <targetPath>META-INF/resource</targetPath>
                <includes>
                    <include>**/**</include>
                </includes>
            </resource>
            <resource>
            <directory>src/main/resources</directory>
